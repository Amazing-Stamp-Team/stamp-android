<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stamp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color_100</item>
        <item name="colorPrimaryDark">@color/main_color_100</item>
        <item name="colorAccent">@color/main_color_100</item>
        <item name="colorPrimaryVariant">@color/main_color_80</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="colorDistrict1">#ff0000</item>
        <item name="buttonStyle">@style/customBtnStyle</item>
        <item name="android:textColor">@color/black</item>

        <item name="bottomSheetDialogTheme">@style/DialogStyle</item>
    </style>

    <attr name="colorDistrict1" format="color" />

    <style name="customBtnStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogStyle" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


</resources>