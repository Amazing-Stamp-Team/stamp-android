<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/gap_line">

    <ImageView
        android:id="@+id/iv_item_festival"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/img_sample_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/gap_line"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_festival_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/semi_title_size"
            android:textStyle="bold"
            tools:text="보령 머드 축제" />

        <TextView
            android:id="@+id/tv_item_festival_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_line"
            tools:text="충청남도 보령시 대천음" />

        <TextView
            android:id="@+id/tv_item_festival_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2020.10.10 ~ 2020.10.12" />

        <TextView
            android:id="@+id/tv_item_festival_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="041-0000-0000" />
    </LinearLayout>

</LinearLayout>